#
# Sway style configuration
#

# Read `man 5 sway` for more information.



include ~/.config/sway/config.d/colors



#
# Fonts
#

# Set the title bar font
font pango:hack 9



#
# Border
#

# Set border colors
client.focused 			$border_bg_focused		$border_bg_focused 		$border_fg_focused
client.unfocused 		$border_bg_unfocused		$border_bg_unfocused 		$border_fg_unfocused
client.focused_inactive		$border_bg_focused_inactive	$border_bg_focused_inactive	$border_fg_focused_inactive
client.placeholder		$border_bg_placeholder		$border_bg_placeholder	 	$border_fg_placeholder
client.urgent 			$border_bg_urgent		$border_bg_urgent 		$border_fg_urgent

# Set border defaults
default_border 			normal
default_floating_border		pixel

# Set title bar appearance
titlebar_padding 7 3
title_align center



#
# Program specific styles
#

# Set custom kitty style
#for_window [app_id=$term] opacity 0.95
